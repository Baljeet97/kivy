
<Buttons@Button>:
    font_size: 50

<Calculating>:
    id: calculator
    display: entry
    rows: 6
    padding: 5
    spacing: 5

    BoxLayout:
        TextInput:
            id: entry
            font_size: 50
            multiline: False

    BoxLayout:
        spacing: 5
        Buttons:
            text: "AC"
            background_color: (1, 0.58, 0, 1)
            on_press: entry.text = ""
        Buttons:
            text: ""
#            on_press: calculator.squaring(entry.text)
        Buttons:
            text: "pi" #need to add
            on_press: entry.text += self.text
        Buttons:
            text: "/"
            background_color: (1, 0.58, 0, 1)
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 5
        Buttons:
            text: "7"
            on_press: entry.text += self.text
        Buttons:
            text: "8"
            on_press: entry.text += self.text
        Buttons:
            text: "9"
            on_press: entry.text += self.text
        Buttons:
            text: "*"
            background_color: (1, 0.58, 0, 1)
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 5
        Buttons:
            text: "4"
            on_press: entry.text += self.text
        Buttons:
            text: "5"
            on_press: entry.text += self.text
        Buttons:
            text: "6"
            on_press: entry.text += self.text
        Buttons:
            text: "-"
            background_color: (1, 0.58, 0, 1)
            on_press: entry.text += self.text


    BoxLayout:
        spacing: 5
        Buttons:
            text: "1"
            on_press: entry.text += self.text
        Buttons:
            text: "2"
            on_press: entry.text += self.text
        Buttons:
            text: "3"
            on_press: entry.text += self.text
        Buttons:
            text: "+"
            background_color: (1, 0.58, 0, 1)
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 5
        Buttons:
            text: "0"
            on_press: entry.text += self.text
        Buttons:
            text: ""
            on_press: entry.text += self.text
        Buttons:
            text: "."
            on_press: entry.text += self.text
        Buttons:
            text: "="
            background_color: (1, 0.58, 0, 1)
            on_press: calculator.calculate(entry.text)